      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"newuser@example.com\",\"password\":\"password123\"}"
        },
        "url": {
          "raw": "http://localhost:3001/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
